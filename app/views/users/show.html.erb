<section class='user'>
  <%= render @user %>
  <div class='user-bio'>
    <h3 class='user-bio-title'>Bio</h3>
    <p class='user-bio-text'><%= @user.bio %></p>
  </div>
  <p>
    <%= link_to "Creat New post", new_user_post_path(@user) %>
  </p>
  <% if @user.posts.empty? %>
    <p class="empty-message">This user has not written any posts!!!</p>
  <% else %>
    <% @user.recent_posts.each do |post| %>
      <%= render post%>
    <% end %>
    <%= link_to "See all posts", user_posts_path(@user), class: "button" %>
  <% end%>
</section>
