<article class='post'>
  <h3 class='post-title'><%= link_to_unless_current "#{post.title}", user_post_path(@user, post)%></h3>
  <p><%= truncate(post.text, length: 200, separator: ' ', omission: '...') %></p>
  <div class='post-comments-likes'>
    <span class='post-comments-count'>Comments: <%= post.comments.count%></span>
    <span class='post-likes-count'>&nbsp;&nbsp;&nbsp;Likes: <%= post.likes.count%></span>
  </div>
</article>
